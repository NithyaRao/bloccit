<h1><%= markdown_to_html @post.title %></h1>
<div class="row">
   <div class="col-md-8">
     <small>
       <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
       submitted <%= time_ago_in_words(@post.created_at) %> ago by
       <%= @post.user.name %>
     </small>
     <p class="lead"><%= markdown_to_html @post.body %></p>
    <h1> COMMENTS </h1>
    <% @comments.each do |comment| %>
     <div class="media">
      <div class="media-body">
       <h4 class="media-heading">
          <%= markdown_to_html comment.body %>
          <small>
          <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %> 
         submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %>
       </small>
       </h4>
     </div>
   </div>
   <% end %>
 </div>
   <div class="col-md-4">
     <% if policy(@post).edit? %>
       <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-success' %>
     <% end %>
   </div>
</div>